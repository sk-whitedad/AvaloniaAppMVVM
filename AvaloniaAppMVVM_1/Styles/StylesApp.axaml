<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:uc="clr-namespace:AvaloniaAppMVVM_1.Views">

	<Style Selector="Button.btn">
		<Setter Property="Background" Value="#698591"/>
		<Setter Property="Height" Value="50"/>
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="FontWeight" Value="Black"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		
	</Style>

	<Style Selector="Button.btn1">
		<Setter Property="Background" Value="#969c87"/>
		<Setter Property="CornerRadius" Value="10"/>
		<Setter Property="Height" Value="40"/>		
	</Style>

	<Style Selector="StackPanel.pnl">
		<Setter Property="Background" Value="#698591"/>
	</Style>
</Styles>
