<UserControl
    x:Class="AvaloniaAppMVVM_1.Views.UC2View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaloniaAppMVVM_1.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:UC2ViewModel"
    mc:Ignorable="d">
	<Design.DataContext>
		<vm:UC2ViewModel/>
	</Design.DataContext>

	<Grid Classes="Body" ColumnDefinitions="1*, 3*">
		<TreeView
            Grid.Column="0"
            Margin="10"
            BorderBrush="White" />

		<DataGrid
            Grid.Column="1"
            Margin="20"
            BorderBrush="Gray"
			Background="White"
            BorderThickness="1"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserSortColumns="False"
            GridLinesVisibility="All"
            IsReadOnly="True"
            ItemsSource="{Binding Companies}">
			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding Id}" Header="â„–" />
				<DataGridTextColumn Binding="{Binding Name}" Header="Name" />
				<DataGridTextColumn Binding="{Binding PhoneNumber}" Header="Phone Number" />
				<DataGridTextColumn Binding="{Binding Address}" Header="Address" />
			</DataGrid.Columns>
		</DataGrid>




	</Grid>

</UserControl>
